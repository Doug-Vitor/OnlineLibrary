@model Book

@{ 
    ViewData["Title"] = "Excluir livro";
}

<h3>@ViewData["Title"]</h3>
<h4>Você tem certeza?</h4>

<div class="row">
    <form asp-action="Remove">
        <div class="form-group">
            <label class="col-form-label" asp-for="Title"></label>
            <input class="form-control form-input" readonly="" asp-for="Title" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Genre"></label>
            <input class="form-control form-input" readonly="" value="@Model.Genre.GetDisplayName()" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Price"></label>
            <div class="input-group mb-3">
                <span class="input-group-text">R$</span>
                <input type="text" class="form-control" style="max-width:200px" readonly="" asp-for="Price"/>
            </div>
        </div>

        <div class="form-group" style="display:flex;justify-content:right">
            <input class="btn btn-danger" type="submit" value="Confirmar" />
            <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .form-input {
        max-width:400px;
    }
    .btn {
        margin:2px;
    }
</style>